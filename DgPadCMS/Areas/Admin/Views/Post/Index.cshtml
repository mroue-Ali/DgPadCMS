@model IEnumerable<Post>

@{
    ViewData["Title"] = "List of the posts";
}

<h1>Posts</h1>

<p>
    <a asp-action="Create">Create New Post</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
             Title
            </th>
            <th>
               PostType
            </th>
            <th>
               Creation Date
            </th>
            <th>
               Details
            </th>
            <th>
               Summary
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                posttype
            </td>
            <td>
                @item.CreationDate
            </td>
            <td>
                @item.Detail
            </td>
            <td>
                @item.Summary
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
