@model PostTermViewModel

@{
    ViewData["Title"] = "CreateSecond";
}

<h1>CreateSecond</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <h3>Post a @ViewBag.PostType</h3>
        <form asp-action="CreateSecond">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               
