@model DgPadCMS.Models.Post

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <dl class="row">
      
        <dt class = "col-sm-2">
           Title
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
           PostType
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PostTypeId)
        </dd>
        <dt class = "col-sm-2">
            CreationDate
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class = "col-sm-2">
           Details
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Detail)
        </dd>
        <dt class = "col-sm-2">
           Summary
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Summary)
        </dd>
        <h5>Terms</h5>
        <div>
            @foreach (var item in ViewBag.Terms)
            {
                <dd class="col-sm-10">
                        @item.Term.Name
                        </dd>
            }
        </div>
    </dl>
</div>
