@model DgPadCMS.Models.Term

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Term</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="taxonomyId" class="control-label">Taxonomy</label>
                <select asp-for="taxonomyId" asp-items="@ViewBag.TaxonomyId" class="form-control"><option value="0">Choose a category</option></select>
                <span asp-validation-for="taxonomyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
